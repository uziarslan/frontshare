    <!-- ===============================================-->

    <!-- ===============================================-->
    <!--                   JavaScripts                  -->
    <!-- ===============================================-->
    <script>
      localStorage.setItem("price", 8);
      function changePrice() {
        let check = document.getElementById("customSwitch1");
        if (!check.checked) {
          document.getElementById("priceplan").innerHTML =
            "8 <span class='fs--2 mt-1'>/ m</span>";
          localStorage.setItem("price", 8);
        } else {
          document.getElementById("priceplan").innerHTML =
            "60 <span class='fs--2 mt-1'>/ y</span>";
          localStorage.setItem("price", 60);
        }
      }
    </script>

