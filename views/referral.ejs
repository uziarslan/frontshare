  <!-- Invite Submited Email function -->
  <script>
    document
      .getElementById("invitationForm")
      .addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent form submission

        // Get the entered email address
        var email = document.getElementById("emailInput").value;

        // Create the email URL with the subject and body
        var subject = encodeURIComponent("Join this website, it's great");
        var body = encodeURIComponent(
          "Check out this amazing website: " + window.location.href
        );
        var mailtoUrl =
          "mailto:" + email + "?subject=" + subject + "&body=" + body;

        // Open the user's default email client
        window.location.href = mailtoUrl;
      });
  </script>

  <!-- Invite Gmail function -->
  <script>
    function openGmailInviteWindow() {
      // Define the email subject and body
      var subject = encodeURIComponent("Invitation to my event");
      var body = encodeURIComponent(
        "Dear friend,\n\nI would like to invite you to my event. Please save the date and let me know if you can attend.\n\nBest regards,\nYour Name"
      );

      // Construct the email URL
      var url = "mailto:?subject=" + subject + "&body=" + body;

      // Open the email window
      window.open(url);
    }
  </script>

  <!-- Invite CopyURL function -->
  <script>
    function copyURL() {
      var currentURL = window.location.href;
      navigator.clipboard
        .writeText(currentURL)
        .then(function () {
          alert("URL copied to clipboard!");
        })
        .catch(function (error) {
          console.error("Failed to copy URL: ", error);
        });
    }
  </script>

