                <div class="col-md mt-1 mt-md-0">
                  <code>POST /v1/invoices/in_1Dnkhadfk</code>
                </div>
                <div class="col-md-auto">
                  <p class="mb-0">2019/02/01 12:29:34</p>
                </div>
              </div>
            </div>
          </div>
          <footer><%- include('partials/footer.ejs') %></footer>
        </div>
      </div>
    </main>
    <!-- ===============================================-->
    <!--              End of Main Content               -->
    <!-- ===============================================-->

